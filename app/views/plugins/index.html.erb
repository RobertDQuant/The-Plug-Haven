<%= render 'nav' %>
<div ="bg">
<h1>All The Plugins</h1>
<div class="button">
 <%= link_to 'New Plugin', new_plugin_path %>
 </div>
<br>
 <div class="tt">
<table>
  <tr>
    <th>Name</th>
    <th>Creator</th>
    <th>Src</th>
    <th>Direct_Link</th>
    <th>Category</th>
    <th colspan="3">Show/Edit/Delete</th>
  </tr>
 
  <% @plugins.each do |plugin| %>
    <tr>
      <td><%= plugin.name %></td>
      <td><%= plugin.creator %></td>
      <td><a href="<%= plugin.direct_link %>"><img src="<%= plugin.src %>" alt="plugin's picture" class="pluginPic"></a></td>
      <td><a href="<%= plugin.direct_link %>">Plugin Link</a></td>
      <td><%= plugin.category %></td>
      <td><%= link_to 'Show', plugin_path(plugin) %></td>
      <td><%= link_to 'Edit', edit_plugin_path(plugin) %></td>
      <td><%= link_to 'Destroy', plugin_path(plugin),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</div>
</div>